{
  "name": "ebook-batch-converter",
  "version": "0.1.0",
  "scripts": {
    "start": "go run main.go -i ./util/temp/input/ -o ./util/temp/output/",
    "build": "go build",
    "build:win": "env-cmd -e win go build -o dist/win/ebook-batch-converter.exe",
    "build:mac": "env-cmd -e mac go build -o dist/mac/ebook-batch-converter",
    "build:linux": "env-cmd -e linux go build  -o dist/linux/ebook-batch-converter",
    "build:all": "yarn build:win & yarn build:mac & yarn build:linux"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0"
  }
}
