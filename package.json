{
  "name": "ebook-batch-converter",
  "version": "0.4.1",
  "scripts": {
    "start": "go run main.go -i ./util/temp/input/ -o ./util/temp/output/",
    "build": "goreleaser release --snapshot --skip-publish --rm-dist",
    "pub": "env-cmd goreleaser release",
    "postinstall": "npx simple-git-hooks",
    "build:scripts": "rm bin && rollup -c",
    "install": "node bin/install.js"
  },
  "bin": {
    "ebook-batch-converter": "./bin/.cache/ebook-batch-converter"
  },
  "files": [
    "bin/install.js"
  ],
  "jest": {
    "preset": "ts-jest"
  },
  "prettier": "@liuli-util/prettier-standard-config",
  "devDependencies": {
    "@liuli-util/shell": "^0.2.0",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@liuli-util/prettier-standard-config": "^0.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@types/fs-extra": "^9.0.12",
    "@types/jest": "^26.0.24",
    "@types/node": "14",
    "@types/node-fetch": "^2.5.11",
    "@types/tar": "^4.0.5",
    "builtin-modules": "^3.2.0",
    "env-cmd": "^10.1.0",
    "jest": "^27.0.6",
    "lint-staged": "^11.0.1",
    "prettier": "^2.3.2",
    "rollup": "^2.53.2",
    "rollup-plugin-add-shebang": "^0.3.1",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "simple-git-hooks": "^2.5.1",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "fs-extra": "^10.0.0",
    "node-fetch": "^2.6.1",
    "tar": "^6.1.0"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged",
    "commit-msg": "yarn commitlint --edit $1"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
